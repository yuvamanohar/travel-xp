<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postView"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Yuva Manohar"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/media"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/name"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/images" />

        <TextView
            android:id="@+id/scribble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/media"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Sample description Sample description at Arambol beach"
            android:textColor="#666"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scribble"
            android:maxLines="3"
            android:padding="8dp"
            android:text="At Arambol beach"
            android:textColor="#666"
            android:textSize="14dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="99 likes-"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="9 comments~"
                android:textColor="#666"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/shares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="19 shares#"
                android:textColor="#666"
                android:textSize="14dp" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>